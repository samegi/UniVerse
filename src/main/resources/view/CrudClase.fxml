<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="327.0" prefWidth="600" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.universe.controllers.CrudClaseController">

    <children>
        <ImageView fitHeight="344.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/CrudClase.jpg" />
            </image>
        </ImageView>

        <!-- Asignatura -->
        <Label layoutX="40.0" layoutY="76.0" text="Asignatura" />
        <ComboBox fx:id="cmbAsignatura" layoutX="120.0" layoutY="72.0" prefWidth="150.0" />

        <!-- Día -->
        <Label layoutX="47.0" layoutY="107.0" text="Día" />
        <ComboBox fx:id="cmbDia" layoutX="120.0" layoutY="103.0" prefHeight="25.0" prefWidth="150.0" />

        <!-- Hora Inicio -->
        <Label layoutX="68.0" layoutY="132.0" text="Hora Inicio" />
        <Spinner fx:id="spnHoraInicio" layoutX="31.0" layoutY="149.0" prefHeight="25.0" prefWidth="59.0" />
        <Spinner fx:id="spnMinutoInicio" layoutX="232.0" layoutY="149.0" prefHeight="25.0" prefWidth="59.0" />

        <!-- Hora Fin -->
        <Label layoutX="203.0" layoutY="132.0" text="Hora Fin" />
        <Spinner fx:id="spnHoraFin" layoutX="166.0" layoutY="149.0" prefHeight="25.0" prefWidth="59.0" />
        <Spinner fx:id="spnMinutoFin" layoutX="97.0" layoutY="149.0" prefHeight="25.0" prefWidth="59.0" />
        <ComboBox fx:id="cmbProfesor1" layoutX="31.0" layoutY="189.0" prefHeight="25.0" prefWidth="119.0" promptText="Profesor 1" />
        <ComboBox fx:id="cmbProfesor2" layoutX="166.0" layoutY="189.0" prefHeight="25.0" prefWidth="119.0" promptText="Profesor 2" />
        <ComboBox fx:id="cmbSalon" layoutX="31.0" layoutY="225.0" prefHeight="25.0" prefWidth="119.0" promptText="Salon" />
        <ComboBox fx:id="cmbSemestre" layoutX="166.0" layoutY="225.0" prefHeight="25.0" prefWidth="119.0" promptText="Semestre" />

        <!-- Botones -->
        <Button fx:id="btnGuardar" layoutX="114.0" layoutY="296.0" onAction="#guardarClase" prefHeight="25.0" prefWidth="84.0" text="Guardar" />
        <Button fx:id="btnEliminarGrupo" layoutX="517.0" layoutY="295.0" onAction="#eliminarGrupoClases" prefHeight="25.0" prefWidth="68.0" text="Eliminar" />
        <Button fx:id="btnActualizar" layoutX="309.0" layoutY="296.0" onAction="#actualizarClase" text="Actualizar" />
        <Button fx:id="btnVolver" layoutX="527.0" layoutY="14.0" onAction="#regresarMenu" text="Volver" />
        <Button layoutX="408.0" layoutY="296.0" onAction="#onCargarJsonClick" text="Cargar JSON" />

        <!-- Tabla -->
        <TableView fx:id="tblClases" layoutX="309.0" layoutY="52.0" prefHeight="194.0" prefWidth="281.0">
            <columns>
                <TableColumn fx:id="colAsignatura" prefWidth="92.0" text="Asignatura" />
                <TableColumn fx:id="colDia" prefWidth="62.0" text="Día" />
                <TableColumn fx:id="colHoraInicio" prefWidth="66.0" text="Inicio" />
                <TableColumn fx:id="colHoraFin" prefWidth="59.0" text="Fin" />
            </columns>
        </TableView>
      <Button fx:id="btnLimpiar" layoutX="114.0" layoutY="263.0" onAction="#limpiarCampos" prefHeight="25.0" prefWidth="84.0" text="Limpiar" />

    </children>
</AnchorPane>
