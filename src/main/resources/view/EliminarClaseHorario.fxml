<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="365.0" prefWidth="202.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.universe.controllers.EliminarClaseHorarioController">

    <children>

        <!-- Fondo: AHORA está correctamente atrás -->
        <ImageView fx:id="imgFondo" fitHeight="364.0" fitWidth="667.0" layoutX="0" layoutY="0" pickOnBounds="true" preserveRatio="false" AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="-17.0" AnchorPane.topAnchor="0">
            <image>
                <Image url="@../images/EliminarClaseHorario.jpg" />
            </image>
        </ImageView>

        <!-- Tabla de clases -->
        <TableView fx:id="tablaClases" layoutX="40.0" layoutY="75.0" prefHeight="230" prefWidth="570">

            <columns>
                <TableColumn fx:id="colAsignatura" prefWidth="110" text="Asignatura" />
                <TableColumn fx:id="colProfesor" prefWidth="120" text="Profesor" />
                <TableColumn fx:id="colDia" prefWidth="60" text="Día" />
                <TableColumn fx:id="colInicio" prefWidth="60" text="Inicio" />
                <TableColumn fx:id="colFin" prefWidth="60" text="Fin" />
                <TableColumn fx:id="colSalon" prefWidth="91.0" text="Salón" />
                <TableColumn fx:id="colCupo" prefWidth="68.0" text="Cupo" />
            </columns>

        </TableView>

        <!-- Barra de créditos -->
        <Label layoutX="40.0" layoutY="320.0" style="-fx-font-size: 14; -fx-font-weight: bold;" text="Créditos inscritos:" />

        <ProgressBar fx:id="barraCreditos" layoutX="170.0" layoutY="320.0" prefHeight="20" prefWidth="200" />

        <Label fx:id="lblCreditos" layoutX="380" layoutY="320" style="-fx-font-size: 14;" />

        <!-- Mensaje -->
        <Label fx:id="lblMensaje" layoutX="40" layoutY="345" style="-fx-font-size: 14;" />

        <!-- Botón Eliminar -->
        <Button layoutX="490.0" layoutY="318.0" onAction="#eliminarClase" prefWidth="120" text="Eliminar Clase" />

        <!-- Botón Volver -->
        <Button layoutX="575.0" layoutY="14.0" onAction="#volverMenu" text="Volver" />

    </children>

</AnchorPane>
