<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.universe.controllers.InscribirHorarioController"
            prefWidth="1000" prefHeight="600">

    <!-- Panel izquierdo -->
    <left>
        <VBox spacing="10" prefWidth="350">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Inscribir Clase" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

            <ComboBox fx:id="comboAsignatura" promptText="Seleccionar Asignatura" />

            <TableView fx:id="tablaClases" prefHeight="350">
                <columns>
                    <TableColumn fx:id="colProfesor" text="Profesor" prefWidth="150"/>
                    <TableColumn fx:id="colDia" text="DÃ­a" prefWidth="80"/>
                    <TableColumn fx:id="colInicio" text="Inicio" prefWidth="60"/>
                    <TableColumn fx:id="colFin" text="Fin" prefWidth="60"/>
                </columns>
            </TableView>

            <Button text="Agregar al horario"
                    onAction="#agregarClase"
                    style="-fx-background-color: #2d6cdf; -fx-text-fill: white;" />

            <Label fx:id="lblMensaje" text="" style="-fx-font-size: 14;"/>

        </VBox>
    </left>

    <!-- Panel derecho: calendario semanal -->
    <center>
        <GridPane fx:id="gridCalendario"
                  hgap="5" vgap="5"
                  style="-fx-background-color: #f5f5f5;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
        </GridPane>
    </center>

</BorderPane>
