<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="335.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.universe.controllers.InscribirHorarioController">

    <children>

        <!-- Fondo -->
        <ImageView fitHeight="364.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/InscribirHorario.jpg" />
            </image>
        </ImageView>

        <!-- Botones -->
        <Button layoutX="508.0" layoutY="14.0" onAction="#regresarMenu" prefHeight="25.0" prefWidth="78.0" text="Volver" />

        <Button layoutX="508.0" layoutY="49.0" onAction="#verHorario" prefHeight="25.0" prefWidth="78.0" text="Ver Horario" />

        <!-- Combo Box -->
        <ComboBox fx:id="comboAsignatura" layoutX="110.0" layoutY="49.0" prefHeight="25.0" prefWidth="170.0" promptText="Seleccionar Asignatura" />

        <!-- Tabla -->
        <TableView fx:id="tablaClases" layoutX="110.0" layoutY="84.0" prefHeight="156.0" prefWidth="381.0">

            <columns>
                <TableColumn fx:id="colProfesor" prefWidth="100.0" text="Profesor" />
                <TableColumn fx:id="colDia" prefWidth="70.0" text="Día" />
                <TableColumn fx:id="colInicio" prefWidth="70.0" text="Inicio" />
                <TableColumn fx:id="colFin" prefWidth="70.0" text="Fin" />

                <!-- NUEVA COLUMNA CRÉDITOS -->
                <TableColumn fx:id="colCreditos" prefWidth="70.0" text="Créditos" />
            </columns>

        </TableView>

        <!-- Botón Agregar -->
        <Button layoutX="271.0" layoutY="248.0" onAction="#agregarClase" text="Agregar" />

        <!-- Mensajes -->
        <Label fx:id="lblMensaje" layoutX="113" layoutY="325" style="-fx-font-size: 14;" text="" />

        <!-- BARRA DE PROGRESO DE CRÉDITOS -->
        <Label layoutX="113.0" layoutY="289.0" style="-fx-font-weight: bold;" text="Créditos inscritos:" />
        <ProgressBar fx:id="barraCreditos" layoutX="231.0" layoutY="289.0" prefHeight="18.0" prefWidth="257.0" />
        <Label fx:id="lblCreditos" layoutX="328.0" layoutY="307.0" text="0/20 créditos" />

    </children>
</AnchorPane>
