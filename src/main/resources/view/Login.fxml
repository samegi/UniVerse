<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:controller="co.edu.universe.controllers.LoginController"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="600" prefHeight="400">

    <children>

        <!-- FONDO -->
        <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/IniciarSesion.jpg" />
            </image>
        </ImageView>

        <!-- CAMPO DE USUARIO -->
        <TextField fx:id="txtNombre"
                   layoutX="226.0" layoutY="144.0"
                   promptText="Ingrese su usuario"/>

        <!-- BOTÓN INGRESAR -->
        <Button layoutX="271.0" layoutY="211.0" mnemonicParsing="false"
                onAction="#onLoginClick" text="Ingresar" />
        <!-- BOTÓN REGISTRAR -->
        <Button layoutX="269.0" layoutY="240.0" mnemonicParsing="false"
                onAction="#onRegisterClick" text="Registrar" />

        <!-- LABEL DE ERROR -->
        <Label fx:id="lblError"
               layoutX="220.0" layoutY="185.0"
               textFill="red"
               style="-fx-font-weight: bold;" />

    </children>
</AnchorPane>
