<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="370.0" prefWidth="650" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.universe.controllers.ReporteNominaProfesor">

    <children>

        <!-- Fondo -->
        <ImageView fitHeight="374.0" fitWidth="650">
            <image>
                <Image url="@../images/ReporteProfe.jpg" />
            </image>
        </ImageView>

        <!-- COMBO PROFESOR -->
        <Label layoutX="14.0" layoutY="63.0" style="-fx-text-fill: black;" text="Profesor:" />
        <ComboBox fx:id="cmbProfesor" layoutX="14.0" layoutY="88.0" prefWidth="200" />

        <!-- DATOS DEL PROFESOR -->
        <Label fx:id="lblTipo" layoutX="233.0" layoutY="92.0" prefHeight="17.0" prefWidth="184.0" style="-fx-text-fill: black;" />
        <Label fx:id="lblHoras" layoutX="233.0" layoutY="130.0" prefHeight="17.0" prefWidth="184.0" style="-fx-text-fill: black;" />
        <Label fx:id="lblHorasNoc" layoutX="234.0" layoutY="164.0" prefHeight="17.0" prefWidth="184.0" style="-fx-text-fill: black;" />
        <Label fx:id="lblSalario" layoutX="233.0" layoutY="202.0" prefHeight="17.0" prefWidth="184.0" style="-fx-text-fill: black;" />
        <Label fx:id="lblExtra" layoutX="233.0" layoutY="245.0" prefHeight="17.0" prefWidth="184.0" style="-fx-text-fill: black;" />

        <!-- Botón generar archivo -->
        <Button fx:id="btnGenerar" layoutX="234.0" layoutY="336.0" onAction="#exportarTxt" style="-fx-background-color: #106585; -fx-text-fill: white;" text="Generar TXT" />

        <!-- Botón volver -->
        <Button fx:id="btnVolver" layoutX="337.0" layoutY="336.0" onAction="#volver" prefHeight="25.0" prefWidth="81.0" style="-fx-background-color: grey; -fx-text-fill: white;" text="Volver" />

    </children>
</AnchorPane>
